.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path(current_user) do
          =icon('fas', 'edit', class:"top-items__icon")
        = link_to edit_user_path(current_user) do
          =icon('fas', 'cog', class:"top-items__icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .list
        .list__group-list
          .list__group-name
            %a.group-name{:href => "/groups/#{group.id}/messages"}
              = group.name
          .list__group-message
            = group.show_last_message